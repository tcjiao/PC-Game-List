<%- include('./partials/header') %>


<div class="header">
  <h3>Top Games</h3>
  <form action="/" method="get">
    <button type="submit" class="refresh-button">ðŸ”„</button>
  </form>
</div>

<div class="game-list">
  <% topGames.forEach((game, index) => { %>
    <div class="game">
      <h3><%= game.name %></h3>
      <img src="<%= game.coverImageUrl %>" alt="<%= game.name %>" class="game-image">
      <p>Rating: <%= game.rating %></p>
    </div>
    <% if ((index + 1) % 5 === 0) { %>
      <div class="clear"></div>
    <% } %>
  <% }) %>
</div>



