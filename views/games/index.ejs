<%- include('../partials/header') %>


<div class="header">
  <h1 class="page-title">The Most Popular Games in 2023</h1>
  <form action="/games" method="get">
    <button type="submit" class="refresh-button">ðŸ”„</button>
  </form>
</div>

<div class="game-list">
  <% topGames.forEach((game, index) => { %>
    <div class="game">
    <div class="game-info">
      <a href="/games/<%= game.id %>">
      <h3><%= game.name %></h3>
    </a>
    <div class="rating"><p>Rating: <%= game.rating %></p>
    <% if (user) { %>
      <% if (!isList) { %>
        <form method="POST" action="/mylist" class="add-to-list-form">
          <input type="hidden" name="gameId" value="<%= game.id %>">
          <button type="submit" class="add-to-list-button-big"></button>
          <p>Add to My List</p>
        </form>
        <% } else {  %>
        <form class="remove-from-list-form" action="/mylist/<%= game.id %>?_method=DELETE" method="POST">
          <button type="submit" class="remove-from-list-button">
               <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                 </svg>
          </button>
        </form>
        <% } %>
      
      <% } %>
    </div>
  </div>

      <a href="/games/<%= game.id %>">
      <img src="<%= game.coverImageUrl %>" alt="<%= game.name %>" class="game-image">
        </a>

    </div>
    <% if ((index + 1) % 5 === 0) { %>
      <div class="clear"></div>
    <% } %>
  <% }) %>
</div>


<%- include('../partials/footer') %>
